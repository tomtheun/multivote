<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.tngtech.confluence.techday</groupId>
    <artifactId>techday-plugin</artifactId>
    <version>0.0.3-SNAPSHOT</version>

    <organization>
        <name>TNG Technology Consulting</name>
        <url>http://www.tngtech.com/</url>
    </organization>

    <name>Techday Manage Plugin</name>
    <description>Simple Confluence plugin for managing software techday</description>
    <packaging>atlassian-plugin</packaging>

    <url />

    <developers>
        <developer>
            <name>Markus Eberle</name>
            <organization>TNG Technology Consulting GmbH</organization>
        </developer>
    </developers>

    <scm>
        <connection>scm:https://subversion.tngtech.com/internal-projects/confluence/techday-plugin/trunk</connection>
        <developerConnection>scm:https://subversion.tngtech.com/internal-projects/confluence/techday-plugin/trunk</developerConnection>
        <url>https://subversion.tngtech.com/internal-projects/confluence/techday-plugin/trunk</url>
    </scm>

    <dependencies>
        <!-- Confluence dependencies -->
        <dependency>
            <groupId>com.atlassian.confluence</groupId>
            <artifactId>confluence</artifactId>
            <version>${confluence.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.atlassian.confluence.plugin</groupId>
            <artifactId>func-test</artifactId>
            <version>2.1.1</version>
            <scope>test</scope>
        </dependency>

        <!-- JUnit is used to perform unit tests -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-confluence-plugin</artifactId>
                <version>3.0.2</version>
                <extensions>true</extensions>
                <configuration>
                    <productVersion>${confluence.version}</productVersion>
                    <productDataVersion>${confluence.data.version}</productDataVersion>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <confluence.version>3.1.1</confluence.version>
        <confluence.data.version>3.0</confluence.data.version>
        <downloadSources>true</downloadSources>
        <downloadJavadocs>true</downloadJavadocs>
    </properties>
</project>
